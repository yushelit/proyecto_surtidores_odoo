                    </div>
                  </div>
                  <ul>
                    <li>
                      Cliente: <field name="cliente"/>
                    </li>
                    <li>
                      Fecha: <field name="fecha"/>
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

